<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_show_week_number"
        android:title="@string/pref_show_week_num_title" />

    <ListPreference
        android:defaultValue="@string/pref_first_day_of_week_default"
        android:dialogTitle="@string/pref_first_day_of_week_title"
        android:entries="@array/pref_week_start_day_labels"
        android:entryValues="@array/pref_first_day_of_week_values"
        android:key="@string/pref_key_first_day_of_week"
        android:summary="%s"
        android:title="@string/pref_first_day_of_week_title" />

    <ListPreference
        android:defaultValue="@string/pref_holiday_region_default"
        android:dialogTitle="@string/pref_holiday_region_title"
        android:entries="@array/region_value"
        android:entryValues="@array/region_name"
        android:key="@string/pref_key_holiday_region"
        android:summary="%s"
        android:title="@string/pref_holiday_region_title" />
</PreferenceScreen>