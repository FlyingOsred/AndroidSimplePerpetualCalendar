<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/day_info_day_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/day_info_view_day_text_size" />

        <TextView
            android:id="@+id/day_info_constellation_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/day_info_day_text_view"
            android:textSize="@dimen/day_info_view_constellation_text_size" />

        <TextView
            android:id="@+id/day_info_today_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/day_info_day_text_view"
            android:layout_toLeftOf="@id/day_info_day_text_view"
            android:layout_toStartOf="@id/day_info_day_text_view"
            android:textSize="@dimen/day_info_view_today_text_size" />

        <TextView
            android:id="@+id/day_info_off_or_work_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/day_info_today_text_view"
            android:layout_toLeftOf="@id/day_info_day_text_view"
            android:layout_toStartOf="@id/day_info_day_text_view"
            android:gravity="start"
            android:textSize="@dimen/day_info_view_off_or_work_text_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/day_info_lunar_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="@dimen/day_info_view_lunar_text_size" />

    <TextView
        android:id="@+id/day_info_solar_term_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:textSize="@dimen/day_info_view_solar_term_text_size" />

    <LinearLayout
        android:id="@+id/day_info_holiday_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>