<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flyingosred.app.android.perpetualcalendar">

    <application
        android:name=".PerpetualCalendarApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LightGreenTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/LightGreenTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings" />
        <activity
            android:name=".DayCardActivity"
            android:label="@string/title_activity_day_card"
            android:theme="@style/LightGreenTheme.NoActionBar" />

        <provider
            android:name=".data.provider.PerpetualCalendarContentProvider"
            android:authorities="com.flyingosred.app.android.perpetualcalendar.api"
            android:enabled="true"
            android:exported="true"></provider>
    </application>

</manifest>